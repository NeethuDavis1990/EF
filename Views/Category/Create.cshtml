@model Category


<form method="post">
    <div class="border m-4 pt-3">
        <div class="text-primary pb-2">
            <h2>Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mt-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mt-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mt-5">
            <button type="submit" class="btn btn-primary width=150px">Create</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary text-end width=150px">Category List</a>
        </div>
    </div>

</form>


@section Scripts{

    @{

        <partial name="_ValidationScriptsPartial" />
    }
}
